{
	"curly":     true,
    "globals": {
        "after": false,
        "afterEach": false,
        "before": false,
        "beforeEach": false,
        "console": false,
        "describe": false,
        "it": false
    },
	"indent":    2,
	"maxlen":    80,
	"newcap":    true,
	"node":      true,
	"onecase":   true,
	"smarttabs": true,
	"strict":    true,
	"undef":     true,
	"unused":    true
}
